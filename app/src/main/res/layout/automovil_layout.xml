<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lyAutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lytDatos"
            android:layout_width="310dp"
            android:layout_height="110dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lytModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbModel"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="Modelo:"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtModelLYT"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytdescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbDescripcion"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="Descripcion:"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDescripcionLYT"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbPrecio"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="Precio:"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrecioLYT"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btnDeleteAuto"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="@color/btn3"
            android:text="Eliminar"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>


    <View style="@style/Divider" />


</LinearLayout>